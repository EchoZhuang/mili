{% extends '../layout/default.njk' %}

{% block main %}
<div class="category-nav-box">
    <div class="category-nav">
        <ul class="category-list">
            <li><a class="category-item {% if not pathname %}category-item-select{% endif %}" href="/">推荐</a></li>
            {% for category in categories %}
            <li><a class="category-item {% if pathname == category.path %}category-item-select{% endif %}" href="{{category.path}}">{{category.name}}</a></li>
            {% endfor %}
            <li style="float: right;margin-right: 0;"><a class="category-item" href="/tags">标签管理</a></li>
        </ul>
    </div>
</div>
<div class="container">
    <div class="index-container">
        <div class="content-box">
            <div class="list-header">
                <ul class="content-list-sort">
                    <li><a href="?sort=popular" class="{% if sort == 'popular' or not sort %}active{% endif %}">热门</a></li>
                    <li><a href="?sort=newest" class="{% if sort == 'newest' %}active{% endif %}">最新</a></li>
                    <li><a href="?sort=noreply" class="{% if sort == 'noreply' %}active{% endif %}">等待回复</a></li>
                </ul>
            </div>
            <div id="articleBox">
                {% include '../component/article/articles.njk' %}
            </div>

            {% if baiduAd.ad580x90 %}
            <div class="article-list-baiduad">
                <script type="text/javascript">
                    (function() {
                        var s = "_" + Math.random().toString(36).slice(2);
                        document.write('<div style="" id="' + s + '"></div>');
                        (window.slotbydup = window.slotbydup || []).push({
                            id: "{{baiduAd.ad580x90}}",
                            container: s
                        });
                    })();
                </script>
            </div>
            {% endif %}

            <div style="background: #fff;">
                <div id="articleList"></div>
            </div>

            <!-- <a class="load-more">阅读更多</a> -->
        </div>
        <div class="home-sidebar">
            <div class="recommended-books">
                <div class="title">
                    <span>开源图书</span>
                </div>
                <ul>
                    {% for book in recommendedBooks %}
                    <li class="book-item">
                        <a href="/books/{{book.id}}">
                            <img class="book-item-img" src="{{book.coverURL}}">
                            <div class="book-item-info">
                                <div class="book-item-title">{{book.name}}</div>
                                <div>
                                    <span class="book-item-buycount">{{book.browseCount}}人已阅读</span>
                                    <span class="try-read">阅读</span>
                                </div>
                            </div>
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>

            {% include '../component/user/recommendusers.njk' %}

            {% if baiduAd.ad250x250 %}
            <div class="home-sidebar-ad1">
                <script type="text/javascript">
                    (function() {
                        var s = "_" + Math.random().toString(36).slice(2);
                        document.write('<div style="" id="' + s + '"></div>');
                        (window.slotbydup = window.slotbydup || []).push({
                            id: "{{baiduAd.ad250x250}}",
                            container: s
                        });
                    })();
                </script>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block pageData %}
<script>
    var categoryID = {% if categoryID %}{{categoryID}}{% else %}undefined{% endif %};
    var uploadPolicy = {{ uploadPolicy | dump | safe }};
</script>
{% endblock %}

{% block libjs %}
<script src="//cpro.baidustatic.com/cpro/ui/c.js" type="text/javascript" async="async" defer="defer"></script>
{% endblock %}

{% block devjs %}
    {{ loadjs('entry/index.js') }}
{% endblock %}